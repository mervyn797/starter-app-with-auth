<html>

<div class="card" style="max-width: 600px;">
  <div class="card-body">
    <%= form_with :url => "/posts" do |form| %>
      <div class="d-flex">
        <div class="w-100">
          <div class="form-floating">
            <%= form.text_area "body", :class => "form-control", :placeholder => "What's happening?", :style => "height: 100px; resize: none;" %>
              <label for="postContent">What's happening?</label>
          </div>
          <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-primary">Post</button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% for post in @posts%>
<div class="card mb-3">
  <div class="card-body">
    <div class="d-flex align-items-start">
      <!-- Profile Photo (Ignored for now) -->
      <div class="flex-shrink-0 me-3">
        <!-- Replace with profile photo image -->
      </div>
      <div class="w-100">
        <div class="d-flex justify-content-between">
          <h5 class="card-title"><%= User.find_by({"id"=>post.user_id }).real_name %></h5>
          <p class="text-muted"><%= post.created_at.strftime("%d %B %Y %H:%M")%></p>
        </div>
        <p class="card-text"><%=post.body%></p>
        <div class="d-flex justify-content-end">
          <a href="#" class="btn btn-primary btn-sm">Like</a>
          <a href="#" class="btn btn-secondary btn-sm mx-2">ReKweet</a>
          <a href="#" class="btn btn-secondary btn-sm">Reply</a>
        </div>
      </div>
    </div>
  </div>
</div>
<%end%>


</html>